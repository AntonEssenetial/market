body 
  font-family $body-font
  -webkit-font-smoothing: antialiased
  min-width: $body-min-width
  max-width: $body-max-width
  margin 0 auto
  background: white
  
main 
  margin-top 69px
  
.main_bg 
  background: #f2f2f2
  
.page__wrapper 
  position: relative
.page_mobile-menu
  .page__wrapper 
    transform: translateX(265px);
    
.page_mobile-menu
.cart-opend
.page_mobile-menu body
.cart-opend body
.page_mobile-menu .page__wrapper
.cart-opend .page__wrapper
  overflow hidden
  
.hidden
  display: none
  
.page_mobile-menu .page__wrapper
  position fixed
  
.title 
  margin 20px 0
  
.page__search 
  padding 20px 0 50px
  
.page__account
  padding 30px 0 
  
input.module__cart__count
  border none
  background: transparent
  width 45px
  height auto
  padding 0px
  text-align: center;
  
.m-show
  display: none

.page__row
  z-index 1
  position relative
  
.modal-wrapper
  box-shadow 0 0 10px rgba(0,0,0, 0.2)
  
.input__adr_center
  border-left 1px solid transparent !important
  border-right 1px solid transparent !important
  &:focus 
    border-color $pink !important
    
.module__search-result 
  .form__label_search input
    line-height initial
    
.form__label_search input
  line-height initial
  
.plus-a 
  width 33px 
  height 42px
  
  