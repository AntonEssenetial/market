include ../modules/injected/injected
include ../modules/page/page

include ../modules/head/head
include ../modules/header/header
include ../modules/footer/footer

include ../modules/heading/heading
include ../modules/icon/icon

include ../modules/module__registration/module__registration
include ../modules/module__notification/module__notification
