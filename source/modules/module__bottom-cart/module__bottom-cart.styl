.module__bottom-cart
  position: fixed
  bottom 0px
  z-index: 100
  background: white
  min-height 100vh
  transform translateY(calc(100% - 78px))

  width 100%
  box-shadow 0 0 10px rgba(0,0,0, 0.2)
  padding-top 19px
  transition all 1s ease-in-out
  
  .icon_cart 
    color $pink
    width 60px 
    height 60px 
    position: relative 
    margin-right 30px
    
  .icon_cross 
    width 20px 
    height 20px
    
  .icon_up
    color $grey
    width 30px 
    height 23px
    &:hover 
      color $pink
      
  &__up 
    cursor pointer
    position: relative 
    top 8px
    margin-right 30px
    
  &__up.active
    transform rotateZ(180deg) 
    .icon 
      color $pink
    
  &__str 
  &__str-2
  &__str-3
    font-size 20px
    
  &__str-2
  &__str-3
    color $dark
    padding 0px
  
  &__str-3 
    semi()
    
  &__link 
    font-size 20px
    color $pink
    decor()
    margin 0 4px
    
  &__row 
    align-items: baseline;
    position: relative 
    top 9px
    
  &__wrapper 
    padding-right 20px
    
  &__items
    padding-top 30px
    
  &__top 
    background: white
    
  &__bottom 
    background: #fafafa;
    
  &__mobile 
    display: none
    
  &__it 
    font-size 13px
    display: block
  
  &__total 
    color $dark
    display: block
    
.opend
  transform translateY(calc(0% + 68px))
  transition all 1s ease-in-out