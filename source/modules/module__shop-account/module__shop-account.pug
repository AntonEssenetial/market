include ../side-nav/side-nav

mixin module__shop-account(data)
  - var bemClass = 'module__shop-account'
  .module__shop-account&attributes(attributes)
    div(class=bemClass + '__s-wrap') 
      div(class=bemClass + '__img')
        img(src="assets/images/account/5.jpg", alt="userpic")
      div(class=bemClass + '__cont') 
        span(class=bemClass + '__str') INTIMISSIMI
        div(class=bemClass + '__row').row.between
          span(class=bemClass + '__str-2') Всего заказов:
          span(class=bemClass + '__str-3') 168
        div(class=bemClass + '__row').row.between
          span(class=bemClass + '__str-2') Доставленных заказов:
          span(class=bemClass + '__str-3') 160
        div(class=bemClass + '__row').row.between
          span(class=bemClass + '__str-2') Отменных заказов:
          span(class=bemClass + '__str-3') 6
        div(class=bemClass + '__row').row.between
          span(class=bemClass + '__str-3') Заказов в обработке:
          span(class=bemClass + '__str-3') 2
        +side-nav(sideNav.shop)


