.module__item
  margin 0 15px
  background: white
  
  &__str-1 
    font-size 18px
    color $dark
    
  &__str-2 
    color $pink
    text-transform: uppercase
    font-size 18px
    semi()
    
  &__cont 
    background: white
    padding 25px
    
  img 
    display block
    
  &__heading
    margin 0 0 20px 0
    
  &__str-3 
    font-size 13px
    color #aeadad
    
  &__str-4 
    font-size 13px
    color $dark
    
  &__str-7
    font-size 13px
    color $pink

  &__disc 
    margin 0 0 30px 0
    
  &__str-5 
    font-size 24px
    color $dark
    
  &__str-6 
    color #6a6969
    text-decoration: line-through;
    position: relative 
    top -7px
    
  &__img-wrap
    img 
      width 100%
      height auto