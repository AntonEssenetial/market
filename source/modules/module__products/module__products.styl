.module__products
  background: white
  
  .module__catalog__loader
    padding 25px 0
    
  .icon_down 
    color $pink 
    transform: rotateZ(90deg);
    width 20px 
    height @width
    margin-right 10px
    position relative 
    top 1px
    
  &__link 
    color $pink
    font-size 14px
    &:hover 
      text-decoration: underline
    
  &__head 
    border-bottom 1px solid $dash-border
    padding 20px 30px
    
  &__item 
    padding 30px
    border-bottom 1px solid $dash-border
    position: relative
    
    .button 
      min-width 130px
      padding 0
      
    &:hover 
      box-shadow: 0 0 20px rgba(0,0,0, 0.1);
      trs()
    
  &__img 
    display block
    max-width 100%
    height auto
    
  &__str-4 
    font-size 26px
    color black
    margin-right 30px
    white-space no-wrap

  &__str 
    font-size 22px
    display: block
    color black
    position relative 
    top -7px
    
  &__list 
    font-size 13px 
    color #6a6969
    
  &__str-2 
    font-size 13px 
    color black 
    display: block
    
  &__str-3 
  &__it
    font-size 22px 
    color $pink
    display: block
    line-height 22px
    margin-bottom 6px
    
  &__it 
    border-bottom 1px solid $pink
    display: inline-block
    &:hover 
      border-color transparent
    
  &__list 
    line-height 18px
    
  &__str-5
    font-size 13px 
    color #aeadad
    
  .pink 
    color $pink 
    font-size 13px
    
  &__img-wrap 
    margin-right 30px
    
  &__ul 
    margin 2px 0 12px
    
  p 
    padding 0px
    
  .al-end 
    align-items: flex-end;
    
  &__row 
    margin-bottom 25px
    
  &__img-wrap 
    width 198px
    static()
    
  &__row-2 
    p 
      padding 0 0 5px 0
      
  &__row-3 
    margin-bottom 10px
    
  &__col 
    padding-right 20px
    
  &__col-2 
    span 
      display: block
      font-size 20px
      width 100% 
      text-align: right
      margin-bottom 5px
    .button 
      min-width 0px
      padding 0 20px
      
  &__row-3 
    margin-top 10px
    
  &__row-4 
    margin-bottom 6px
    .button 
      margin-top 5px
      
  &__row-5 
    margin-bottom 5px
    
