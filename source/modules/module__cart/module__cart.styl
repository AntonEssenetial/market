.module__cart
  
  .icon_cross 
    color $text
    trs()
    
  &__close 
    margin-right 20px
    &:hover .icon 
      color $pink
      trs()
      
  &__str 
  &__str-2 
    font-size 22px
    color $dark
    
  &__str-2 
    color $pink
    semi()
    hover()
    
  &__heading
    border-bottom 1px solid $border
    padding 20px 0
    margin 0 0 10px 0
    
  &__str-3
  &__str-4
    font-size 18px
    color $dark
    
  &__str-4 
    color $pink 
    semi()
    hover()
    
  &__str-5 
    font-size 13px
    display block
    margin-top 5px
    
  &__img 
    display: block
    width 60px
    height 40px
    margin-right 20px
    position: relative 
    top 2px
    
  &__count
    margin 0 5px

  &__str-6 
  &__count
    font-size 24px
    color $dark
    
  &__incr 
  &__decr 
    width 17px 
    height @width
    line-height 13px
    font-size 12px
    background: white
    color black
    border 1px solid $border
    border-radius(50%)
    cursor pointer
    text-align center
    &:hover 
      border-color $pink
      trs()
      
  &__incr 
    line-height 15px
  
  .icon_icon2 
    width 37px 
    height 37px
    color $border
    margin 0 33px 0 10px 
    
    
  td 
    vertical-align: middle
    padding 10px 0
    
    &:last-child, 
    &:nth-last-child(2) 
      text-align: right
    &:nth-last-child(2)
      padding-right 20px 
  
  table 
    width 100%
    
  .total_left 
    text-align: right
  
  &__str-7
    font-size 24px
    color $dark
    padding-right 40px
    
  &__table 
    border-bottom 1px solid $border
    padding-bottom 10px
    margin-bottom 20px
    
  .total 
    td 
      padding-top 10px 
      padding-bottom 20px
    
  .total_t
    border-top 1px solid $border
    td
      padding-top 20px 
      padding-bottom 20px
    .module__cart__count
    .module__cart__str-6
      color $pink
