.module__order
.module__order_mobile
  background: linear-gradient(to left, white 0%, white 30%, $soft 30%, $soft 100%)
  padding-bottom 20px
  
  &__cart 
    padding 20px 0
    background: $soft
    
  .module__cart__str-3
    display: block
  
  .icon_cross
    width 20px 
    height @width
    
  textarea 
    height 94px
    
  &__form 
    background: white
    padding-left  35px
    padding-top 20px
    width 350px
    //margin-bottom 20px
    
    h2 
      margin: 0 0 30px 0;
    
  &__cart 
    padding-right 35px
    
    .module__cart__table:last-child 
      border-bottom none
    
  .label__checkbox 
    margin 20px 0 30px 0
    color $dark
    font-size 14px
  
  .button 
    width 100%
    
  .label__radio
    width 50%
    margin 0 0 20px 0
    
    i 
      width 100%
      height 47px 
      line-height @height
      border-radius(3px)
      margin-right 0px
      font-style normal
      font-size 14px
      color $dark
      padding 0 20px
      border-color $border
      +after()
        display: none !important
        
  .label__radio .input__radio:checked + i 
    background: $pink
    border-color $pink
    color white
    
  .label__radio_left i 
    border-left none
    border-radius 0 2px 2px 0
    
  .label__radio_right i 
    border-radius 2px 0 0 2px
    border-right none
    
  .input__adr 
    width 33.3%
    margin 0px
    
  .input__adr_center 
    border-radius 0 !important
    border-left none
    border-right none
    
  .input__adr_left
    border-radius 2px 0 0 2px !important
    
  .input__adr_right 
    border-radius 0 2px 2px 0px !important
    
  &__bottom 
    position: fixed
    bottom 0px
    width 100%
    background: white
    left 0px
    box-shadow 0 0 5px rgba(0,0,0, 0.1)
    text-align: center
    
    a 
      padding 20px 0
      text-transform: uppercase
      font-size 12px
    
      &:last-child 
        background: $pink
        color white
 
.modal_reg       
  .modal__order
    background white
.modal__order
  padding: 20px 30px 30px 30px;
  h2 
    margin: 0 0 30px 0;
