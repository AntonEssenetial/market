.module__top
  background: white
  
  &__slider
    position: relative;

  &__slide
    height 520px
    background-position center
    backgronud-repeat no-repeat
    background-size cover
    
  &__col 
    background: rgba(0,0,0, 0.5)
    padding 40px 30px 30px 30px
    text-align: center
    max-width 720px
    
  &__wrapper
    margin auto
    
    .button 
      margin-top 30px
    
  &__str 
    color white
    font-size 30px
    margin-top 20px
    
  img 
    margin 0 auto
    display: block
    
  .column 
    height 100%
    
  .icon 
    color white
    height 48px 
    width 48px
    trs()
    &:hover 
      color $pink
      trs()
    
  .slick-next 
    right 0px
    height 48px 
    width 28px
    
  .slick-prev 
    left 0px
    height 48px 
    width 28px
    
  &__nav
    margin 0 auto
    absolute-center(998px, 48px)