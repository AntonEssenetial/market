.module__top
  background: white
  
  &__slider
    position: relative;

  &__slide
    height 520px
    background-position center
    backgronud-repeat no-repeat
    background-size cover
    
  &__col 
    background: rgba(0,0,0, 0.5)
    padding 40px 30px 30px 30px
    text-align: center
    max-width 720px
    margin 0 auto
    
  &__wrapper
    margin auto
    
    .button 
      margin-top 30px
    
  &__str 
    color white
    font-size 30px
    margin-top 20px
    
  img 
    margin 0 auto
    display: block
    
  .column 
    height 100%
    
  .icon 
    color white
    height 48px 
    width 48px
    trs()
    &:hover 
      color $pink
      trs()
    
  .slick-next 
    right 0px
    height 48px 
    width 28px
    
  .slick-prev 
    left 0px
    height 48px 
    width 28px
    
  &__nav
    margin 0 auto
    absolute-center(998px, 48px)
    
  &__search
    width 100%
    margin 30px auto 0 auto
    
    input 
      height 53px
      margin 0px
      
    label 
      margin 0px
      
    .button 
      margin 0px
      
  .button_search 
    width 53px 
    height @width
    display flex
    border-radius 0 3px 3px 0
    static()
    min-width 0
    padding 0px
    
    .icon 
      width 26px 
      height @width
      margin auto 
      &:hover 
        color white 
  
  &__row 
    margin-right 20px
      
  .form__input_s 
    border-radius 3px 0 0 3px
    font-size 18px